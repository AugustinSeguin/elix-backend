<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Elix backoffice - @ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header class="bg-dark text-white p-3 mb-4">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h4 m-0">Elix backoffice</h1>
        <nav>
            <a class="text-white me-3" asp-controller="Home" asp-action="Index">Accueil</a>
            <a class="text-white me-3" asp-controller="Category" asp-action="Index">Categories</a>
            <a class="text-white me-3" asp-controller="Article" asp-action="Index">Articles</a>
            <a class="text-white me-3" asp-controller="Question" asp-action="Index">Questions</a>
            <a class="text-white me-3" asp-controller="Quizz" asp-action="Index">Quizz</a>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-white me-3 p-0 align-baseline">DÃ©connexion</button>
                </form>
            }
            else
            {
                <a class="text-white me-3" asp-controller="User" asp-action="Login">Connexion</a>
            }
        </nav>
    </div>
</header>

<main class="container">
    @RenderBody()
</main>

<footer class="border-top pt-3 mt-5 text-center text-muted">
    <p>&copy; @DateTime.Now.Year - Elix backoffice</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>