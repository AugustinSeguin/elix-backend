@model IEnumerable<ElixBackend.Business.DTO.QuestionDto>

@{
    ViewData["Title"] = "Questions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Questions</h2>
    <a href='@Url.Action("Create", "Question")' class="btn btn-primary">Nouvelle question</a>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">Aucune question trouv√©e.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var q in Model)
        {
            <div class="col" id="question-@q.Id">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@q.Title</h5>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <a href='@Url.Action("Edit", "Question", new { id = q.Id })'
                               class="btn btn-sm btn-outline-secondary">Modifier</a>
                            <form action="@Url.Action("Delete", "Question", new { id = q.Id })"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Confirmer la suppression de cette question ?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}