@model ElixBackend.Business.DTO.QuestionDto

@using System.Linq

@{
    ViewData["Title"] = "Editer une question";
    var categories = ViewBag.Categories as IEnumerable<SelectListItem> ??
                     (ViewBag.Categories as SelectList)?.Items?.Cast<SelectListItem>() ??
                     Enumerable.Empty<SelectListItem>();
    var categoriesList = categories.ToList();
    var categoriesSelectList = new SelectList(categoriesList, "Value", "Text", Model?.CategoryId.ToString());
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h2>Modifier la question</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3 text-center">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-controller="Question" asp-action="Edit" asp-route-id="@Model?.Id" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id"/>

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Titre</label>
                <input asp-for="Title" name="Title" class="form-control" value="@Model?.Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Catégorie</label>
                @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Categories ?? categoriesSelectList, "-- Sélectionner --", new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Média (optionnel)</label>
                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
                    
                @if (!string.IsNullOrEmpty(Model?.MediaPath))
                {
                    <div class="mt-2" id="currentImage">
                        <p>Image actuelle :</p>
                        <img src="@Url.Content($"~/uploads/{System.IO.Path.GetFileName(Model.MediaPath)}")" alt="Image de la question" style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                <input type="file" name="mediaFile" id="mediaFile" class="form-control" accept="image/*,video/*" onchange="previewMedia(this)"/>
                <small class="form-text text-muted">Formats acceptés : Images (JPG, PNG, GIF) ou Vidéos (MP4, WEBM). Laisser vide pour conserver le média actuel.</small>
                <input type="hidden" asp-for="MediaPath" id="mediaPathHidden"/>
                <div id="mediaPreview" class="mt-2"></div>
            </div>
            
            <div class="d-flex justify-content-between">
                <a href="/Question/Index" class="btn btn-secondary">Annuler</a>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </form>

        <hr class="my-4"/>

        @{
            var answers = (ViewBag.Answers as IEnumerable<ElixBackend.Business.DTO.AnswerDto>) ?? Enumerable.Empty<ElixBackend.Business.DTO.AnswerDto>();
            var answersList = answers.ToList();
            var questionId = ViewBag.QuestionId ?? 0;
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Réponses</h2>
            <button type="button" class="btn btn-primary" onclick="openAnswerModal(0, @questionId)">Nouvelle réponse
            </button>
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Explication</th>
                <th>Valide</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (answersList.Any())
            {
                foreach (var answer in answersList)
                {
                    <tr>
                        <td>@answer.Title</td>
                        <td>@answer.Explanation</td>
                        <td>@(answer.IsValid ? "Oui" : "Non")</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-secondary me-1"
                                    onclick="openAnswerModal(@answer.Id, @answer.QuestionId)">Modifier
                            </button>
                            <form action="@Url.Action("Delete", "Answer", new { id = answer.Id })"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Confirmer la suppression de cette réponse ?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Aucune réponse trouvée.</td>
                </tr>
            }
            </tbody>
        </table>

        <div id="answerModalContainer"></div>
    </div>

    <div class="alert alert-warning mt-4">
        <strong>Attention :</strong> Vous devez configurer une seule réponse valide pour chaque question.
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const currentImage = document.getElementById('currentImage');
            preview.innerHTML = '';

            if (input.files && input.files[0]) {
                if(currentImage) currentImage.style.display = 'none';

                const file = input.files[0];
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" alt="Aperçu image">`;
                }

                reader.readAsDataURL(file);
            } else {
                if(currentImage) currentImage.style.display = 'block';
            }
        }
        
        async function openAnswerModal(answerId, questionId) {
            try {
                const url = answerId > 0
                    ? `/Answer/GetFormModal?id=${answerId}`
                    : `/Answer/GetFormModal?questionId=${questionId}`;

                const response = await fetch(url);
                const html = await response.text();

                document.getElementById('answerModalContainer').innerHTML = html;

                const modal = new bootstrap.Modal(document.getElementById('answerFormModal'));
                modal.show();

                // Attacher l'événement de soumission au formulaire
                const form = document.getElementById('answerForm');
                if (form) {
                    // Validation jQuery si disponible
                    if (typeof window.jQuery !== 'undefined' && window.jQuery.validator && window.jQuery.validator.unobtrusive) {
                        window.jQuery.validator.unobtrusive.parse(form);
                    }

                    // Intercepter la soumission du formulaire
                    form.addEventListener('submit', async function (e) {
                        e.preventDefault();

                        const formData = new FormData(form);
                        const action = form.getAttribute('action');

                        try {
                            const submitResponse = await fetch(action, {
                                method: 'POST',
                                body: formData
                            });

                            if (submitResponse.ok) {
                                // Fermer la modale
                                modal.hide();
                                // Recharger la page pour afficher la nouvelle réponse
                                window.location.reload();
                            } else {
                                alert('Erreur lors de la sauvegarde de la réponse');
                            }
                        } catch (error) {
                            console.error('Erreur lors de la soumission:', error);
                            alert('Erreur lors de la sauvegarde de la réponse');
                        }
                    });
                }
            } catch (error) {
                console.error('Erreur lors du chargement de la modale:', error);
            }
        }
    </script>
}
