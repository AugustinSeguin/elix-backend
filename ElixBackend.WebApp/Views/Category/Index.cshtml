@model IEnumerable<ElixBackend.Business.DTO.CategoryDto>

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Catégories";
    var antiToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

<meta name="csrf-token" content="@antiToken"/>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Catégories</h2>
    <a href='@Url.Action("Create", "Category")' class="btn btn-primary">Nouvelle catégorie</a>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">Aucune catégorie trouvée.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var cat in Model)
        {
            <div class="col" id="category-@cat.Id"> @* ID unique pour l'identification AJAX *@
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@cat.Title</h5>
                        @if (!string.IsNullOrEmpty(cat.Description))
                        {
                            <p class="card-text">@cat.Description</p>
                        }
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <a href='@Url.Action("Edit", "Category", new { id = cat.Id })'
                               class="btn btn-sm btn-outline-secondary">Modifier</a>
                            <form action="@Url.Action("Delete", "Category", new { id = cat.Id })"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Confirmer la suppression de cette catégorie ?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}