@model IEnumerable<ElixBackend.Business.DTO.ResourceDto>

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Ressources";
    var antiToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

<meta name="csrf-token" content="@antiToken"/>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Ressources</h2>
    <a href='@Url.Action("Create", "Resource")' class="btn btn-primary">Nouvelle ressource</a>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">Aucune ressource trouvée.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var res in Model)
        {
            <div class="col" id="resource-@res.Id">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@res.Name</h5>
                        @if (!string.IsNullOrEmpty(res.PhoneNumber))
                        {
                            <p class="card-text">Tél: @res.PhoneNumber</p>
                        }
                        <p class="card-text">
                            <small class="text-muted">Lat: @res.Localization.Latitude, Long: @res.Localization.Longitude</small>
                        </p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <a href='@Url.Action("Edit", "Resource", new { id = res.Id })'
                               class="btn btn-sm btn-outline-secondary">Modifier</a>
                            <form action="@Url.Action("Delete", "Resource", new { id = res.Id })"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Confirmer la suppression de cette ressource ?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
